<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical" >
    
    <!-- Title -->

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="35dp"
        android:background="#ff6600"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/txt_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:gravity="center"
            android:orientation="vertical"
            android:text="@string/txt_setting_activity"
            android:textColor="#ffffff"
            android:textSize="18sp"
            android:textStyle="bold" />

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" >
        </FrameLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="5dp"
        android:background="#bbbbbb" >
    </LinearLayout>
    
    
	    
    <ListView
        android:id="@+id/grd_prior_list"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:numColumns="1"/>
        
    
    <!-- Line #-->
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:background="#e5a25a"
        android:focusable="false"
        android:clickable="false"/>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal"
        android:gravity="center_vertical|center_horizontal">							    
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center_vertical" >	
	        <TextView
	            android:orientation="vertical"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginLeft="10dp"
	            android:textSize="14sp"
	            android:layout_marginTop="10dp"
	            android:layout_marginBottom="10dp"
	            android:text="@string/txt_prior_setting" />
	    </LinearLayout>
	    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|center_horizontal" >							    
		    <Button
		        android:id="@+id/btn_prior_add_setting"
		        android:layout_marginLeft="10dp"
		        android:layout_marginRight="10dp"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:background="@drawable/tog_btn_plus"/>
	    </LinearLayout>
	</LinearLayout>

</LinearLayout>
